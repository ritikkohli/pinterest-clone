<%- include ./header.ejs -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css" rel="stylesheet"/>
</head>
<body>
  <div class="bg-green-200 mx-14 flex flex-wrap gap-2 mt-4">
    <% posts.forEach(function(pin){ %>
      <div class="group w-60 overflow-hidden h-max pin cursor-pointer relative">
          <img src="/images/uploads/<%=pin.image%>" class="rounded-2xl">
          
          <div class="invisible group-hover:visible absolute top-0 left-0 ml-5 mt-3
            capitalize text-white text-lg font-semibold h-8 w-max">
            <%=pin.user.username%>
            <i class="ri-arrow-down-s-line"></i>
          </div>
          <div class="invisible group-hover:visible absolute bottom-0 right-0 mr-5 mb-3 flex gap-2">
            <div class="bg-white h-8 w-8 rounded-full flex justify-center items-center">
              <a href="/share/<%=pin._id%>" class="font-semibold text-xl"><i class="ri-share-2-fill"></i></a>  
            </div>
            <div class="bg-white h-8 w-8 rounded-full flex justify-center items-center">
              <a href="/" class="font-semibold text-xl"><i class="ri-more-fill"></i></a>  
            </div>
          </div>            
      </div>
  <% }) %>
  </div>
</body>
</html>